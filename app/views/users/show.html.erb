<div class="row user-show border-bottom">
  <div class="col-9 p-0">
    <div class="coverimage p-0">
      <%= image_tag(@user.coverimage, class:"w-100 h-100 ")  %>
    </div>
  </div>

  <div class="col-3 visited d-flex flex-column justify-content-between">
    <div class="d-flex justify-content-center pt-3">
      <div class="py-3 mx-3">
        <%= follow_option(@user) %>
      </div>

      <%= image_tag(@user.photo, class:"side-profile")  %>
      <span class="material-icons align-middle text-dark py-3 mx-3">assignment</span>
    </div>
    <div >
      <h6 class="text-center"><%= @user.full_name %></h6>
      <p class="text-center"><%= @user.username %></h3>
    </div>
    <div class="d-flex border  mx-n3 ">
      <div class="col-4 border pt-3">
        <p class="text-center spec-fig"><%= @user.techbits.count %> </p>
        <p class="text-center">Techbits</p>
      </div>

      <div class="col-4 border pt-3">
        <p class="text-center spec-fig"><%= @user.followeds.count %></p>
        <p class="text-center">Followings</p>
      </div>

      <div class="col-4 border pt-3">
        <p class="text-center spec-fig"><%= @user.followers.count%></p>
        <p class="text-center">Followers</p>
      </div>
    </div>
  </div>
</div>

<div class="row border-bottom">
  <div class= "col-9 border-right grey-bg">
    <div class="d-flex bd-highlight row p-3 border-bottom">
      <div class="p-2 bd-highlight"><a href="#"><h5>TWEETS</h5></a></div>
    </div>
  </div>

  <div class="col-3 d-flex justify-content-center">
    <h5 id="side-bar">Followed by</h5>
  </div>
</div>

<div class="row">
  <div class= "col-9 border-right">
    <div class="p-3">
      <div class="p-6, bg-light">
        <%= bit_form(@user) %>
      </div>
     
      <div class="pt-3">
        <%= render "techbits/feed" %>
      </div>
    </div>
  </div>

  <div class= "col-3">
    <%= render "users/followed_by" %>
  </div>
</div>
